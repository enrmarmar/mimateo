.control-group
	#big_name_box
		= text_field :task, :name, :required => true, class: 'input-large span12', placeholder: 'Nueva tarea'
	%hr
	.row
		#task_form_left_column.span4
			Plazo
			= text_field :task, :deadline, value: Date.today.to_s
			#deadline_picker
		#task_form_right_column.span8
			= label :task, :description, 'Descripci√≥n'
			= text_area :task, :description, class: 'span12', rows: '6'
- unless @task.errors.empty?
	#warning.alert.alert-error
		Se han producido los siguientes errores:
	%ul
		- @task.errors.full_messages.each do |error|
			%li= error